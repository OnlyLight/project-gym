          .section-customer__top
            .section-customer__info
              span.section-customer__label Age:  
              span.section-customer__value 26
            .section-customer__info
              span.section-customer__lable Target:  
              span.section-customer__value  Lose Fat
          .row
            +result('images/bitmap.png', 'Before', '58kg', '16kg', '37%').col-lg-6.section-customer__wrap
